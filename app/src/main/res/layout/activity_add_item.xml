<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddItemActivity">

    <TextView
        android:id="@+id/textViewAddItem"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:text="Add Item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageViewNoPhoto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/textViewAddItem"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:src="@drawable/ic_photo_gallery_50" />

    <ImageButton
        android:id="@+id/imgBtnCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewNoPhoto"
        android:layout_marginStart="100dp"
        android:background="@null"
        android:src="@drawable/ic_camera_50" />

    <ImageButton
        android:layout_marginStart="100dp"
        android:id="@+id/imgBtnFolder"
        android:layout_below="@id/imageViewNoPhoto"
        android:layout_toRightOf="@id/imgBtnCamera"
        android:background="@null"
        android:src="@drawable/ic_folder_50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editTextNameItem"
        android:layout_margin="10dp"
        android:hint="Name of item"
        android:layout_below="@id/imgBtnCamera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/editTextDescription"
        android:layout_margin="10dp"
        android:hint="Description"
        android:layout_below="@id/editTextNameItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/editTextDescription"
        android:text="add"
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/btnAdd"
        android:layout_below="@id/editTextDescription"
        android:text="cancel"
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>